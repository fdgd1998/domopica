<Page
    x:Class="domopica.ConfigPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:domopica"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="546" Width="1024">

    <Grid HorizontalAlignment="Left">
        <StackPanel x:ConnectionId='2' x:FieldModifier="public" x:Name="sidebar" Width="250" Height="546" HorizontalAlignment="Left">
            <TextBlock Margin="20,30,0,10" FontWeight="Bold"><Run Text="Personaliza"/><Run Text="ción"/></TextBlock>
            <Button x:ConnectionId='4' Name="GoToColorPage" Width="250" Height="56" Background="{x:Null}"                       >
                <Grid Margin="-125,-28,-125,-28">
                    <TextBlock Margin="53,17,27,11" FontSize="18" Text="Tema"/>
                    <Image x:ConnectionId='17' x:Name="paletteicon" x:FieldModifier="public" Width="25" Height="25" Margin="17,14,208,14" RenderTransformOrigin="0.573,0.547"/>
                </Grid>
            </Button>
            <Button x:ConnectionId='5' Name="GoToDateTimePage" Width="250" Height="56" Background="{x:Null}"                       >
                <Grid Margin="-125,-28,-125,-28">
                    <TextBlock Margin="53,17,27,11" FontSize="18" Text="Fecha y hora"/>
                    <Image x:ConnectionId='16' x:Name="datetimeicon" x:FieldModifier="public" Width="25" Height="25" Margin="17,14,208,14" RenderTransformOrigin="0.573,0.547"/>
                </Grid>
            </Button>
            <TextBlock Text="Dispositivos" Margin="20,30,0,10" FontWeight="Bold"></TextBlock>
            <Button x:ConnectionId='6' Name="GoToAmbientLightPage" Width="250" Height="56" Background="{x:Null}"                       >
                <Grid Margin="-125,-28,-125,-28">
                    <TextBlock Margin="53,17,27,11" FontSize="18"><Run Text="Luz ambient"/><Run Text="al"/></TextBlock>
                    <Image x:ConnectionId='15' x:Name="lighticon" x:FieldModifier="public" Width="25" Height="25" Margin="17,14,208,14" RenderTransformOrigin="0.573,0.547"/>
                </Grid>
            </Button>
            <Button x:ConnectionId='7' Name="GoToAlarmPage" Width="250" Height="56" Background="{x:Null}"                       >
                <Grid Margin="-125,-28,-125,-28">
                    <TextBlock Margin="53,17,27,11" FontSize="18" Text="Alarma"/>
                    <Image x:ConnectionId='14' x:Name="dooricon" x:FieldModifier="public" Width="25" Height="25" Margin="17,14,208,14" RenderTransformOrigin="0.573,0.547"/>
                </Grid>
            </Button>
            <Button x:ConnectionId='8' Name="GoToTemperaturePage" Width="250" Height="56" Background="{x:Null}"                       >
                <Grid Margin="-125,-28,-125,-28">
                    <TextBlock Margin="53,17,27,11" FontSize="18" Text="Temperatura"/>
                    <Image x:ConnectionId='13' x:Name="thermometericon" x:FieldModifier="public" Width="25" Height="25" Margin="17,14,208,14" RenderTransformOrigin="0.573,0.547"/>
                </Grid>
            </Button>
            <Button x:ConnectionId='9' Name="GoToAutomatizationPage" Width="250" Height="56" Background="{x:Null}"                       >
                <Grid Margin="-125,-28,-125,-28">
                    <TextBlock Margin="53,17,27,11" FontSize="18" Text="Automatización"/>
                    <Image x:ConnectionId='12' x:Name="automatizationicon" x:FieldModifier="public" Width="25" Height="25" Margin="17,14,208,14" RenderTransformOrigin="0.573,0.547"/>
                </Grid>
            </Button>
            <Button x:ConnectionId='10' Name="GoToResetPage" Width="250" Height="56" Background="{x:Null}"                       >
                <Grid Margin="-125,-28,-125,-28">
                    <TextBlock Margin="53,17,27,11" FontSize="18" Text="Reiniciar dispositivos"/>
                    <Image x:ConnectionId='11' x:Name="reseticon" x:FieldModifier="public" Width="25" Height="25" Margin="17,14,208,14" RenderTransformOrigin="0.573,0.547"/>
                </Grid>
            </Button>
        </StackPanel>
        <Frame x:ConnectionId='3' Width="774" Height="546" x:FieldModifier="public" x:Name="ConfigFrame" Margin="250,0,0,0"/>
    </Grid>
</Page>

